//Input n and find sum of all even no.
using System;

public class Program{

    static void Main(){
      var num = Console.ReadLine();
      int n = int.Parse(num);
      int sum = 0;
      for (int i = 1; i <=n; i++)
      {
        if(i%2 == 0){
          sum = sum + i;
        }
      }
      Console.WriteLine(sum);
      
    }
}